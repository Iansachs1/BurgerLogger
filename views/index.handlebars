<h1 class="titleHead">Eat some burgers</h1>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Eat these burgers!</h2>


    <i class="fas fa-hamburger"></i>



      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-md-6">

      <h2>Eaten Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="createBurger">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>